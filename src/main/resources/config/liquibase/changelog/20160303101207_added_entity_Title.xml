<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Title.
    -->
    <changeSet id="20160303101207" author="jhipster">
        <createTable tableName="title">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title_name" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="is_completed" type="bit"/>
            
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="title_book">
            <column name="books_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="titles_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="titles_id, books_id" tableName="title_book"/>

        <addForeignKeyConstraint baseColumnNames="titles_id"
                                 baseTableName="title_book"
                                 constraintName="fk_title_book_book_id"
                                 referencedColumnNames="id"
                                 referencedTableName="title"/>

        <addForeignKeyConstraint baseColumnNames="books_id"
                                 baseTableName="title_book"
                                 constraintName="fk_title_book_title_id"
                                 referencedColumnNames="id"
                                 referencedTableName="book"/>
        
        <createTable tableName="title_video">
            <column name="videos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="titles_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="titles_id, videos_id" tableName="title_video"/>

        <addForeignKeyConstraint baseColumnNames="titles_id"
                                 baseTableName="title_video"
                                 constraintName="fk_title_video_video_id"
                                 referencedColumnNames="id"
                                 referencedTableName="title"/>

        <addForeignKeyConstraint baseColumnNames="videos_id"
                                 baseTableName="title_video"
                                 constraintName="fk_title_video_title_id"
                                 referencedColumnNames="id"
                                 referencedTableName="video"/>
        
    </changeSet>
</databaseChangeLog>
